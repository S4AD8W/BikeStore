
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-3">
    <div class="col-sm-3 col-md-3">
        @await Html.PartialAsync("prlMenu")
    </div>
    <div class="col-sm-9 col-md-9">

        <div class="card mb-3">
            <div class="card-header">
                Konto
            </div>
            <div class="card-body">
                <div class="row  p-2 mb-2 AccountSetingsBorder">
                    <div class="col-4 "><span class="ml-4" >@Languages.GetText(TextEnum.Name): </span></div>
                    <div class="col-8 text-left">Foo</div>
                </div>
                <div class="row AccountSetingsBorder mb-2 p-2">
                    <div class="col-4 "> <span class="ml-4">@Languages.GetText(TextEnum.SurName): </span></div>
                    <div class="col-8 text-left">Foo</div>
                </div>
                <div class="row AccountSetingsBorder mb-2 p-2">
                    <div class="col-4 "><span class="ml-4"> @Languages.GetText(TextEnum.SurName):</span> </div>
                    <div class="col-8 text-left">Foo</div>
                </div>
                <div class="row AccountSetingsBorder mb-2 p-2">
                    <div class="col-4 "><span class="ml-4"> @Languages.GetText(TextEnum.Since): </span></div>
                    <div class="col-8 text-left">Foo</div>
                </div>
            </div>
        </div>


        <div class="card mb-3">
            <div class="card-header">
                @Languages.GetText(TextEnum.AccountDetails)
            </div>
            <div class="card-body ">
                <div class="row mb-3  AccountSetingsBorder">
                    <span class="ml-4"><a asp-action="ChangePassword" asp-controller="User">@Languages.GetText(TextEnum.ChangePassword)</a></span>
                </div>
                <div class="row mb-3  AccountSetingsBorder">
                    <span class="ml-4"><a>@Languages.GetText(TextEnum.ChangeEmail)</a></span>
                </div>
            </div>
        </div>


    </div>


</div>

