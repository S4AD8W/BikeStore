@model BikeStore.core.Domain.Product.Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddProduct</h2>

<h4>Product</h4>
<hr />
<div class="row">
