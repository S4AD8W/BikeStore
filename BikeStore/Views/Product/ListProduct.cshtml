@model BikeStore.ViewModels.ProductsListVM

@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="categories" class="col-12">
  @await Component.InvokeAsync("NvigationProduct")
</div>
@foreach (var p in Model.Products)
{
@Html.Partial("ProductSummary", p);
}

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory"
     class="btn-group pull-right m-1">
</div>
