@model BikeStore.ViewModels.ProductsListVM

@{
  ViewData["Title"] = "ListProduct";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ListProduct</h2>

<p>
  <a asp-action="AddProduct">Create New</a>
</p>
<div id="categories" class="col-12">
  @await Component.InvokeAsync("NvigationProduct")
</div>
<table class="table">
  <thead>
    <tr>
      <th>
        Product
      </th>
      <th>
        Cena
      </th>
      <th>
        Kategoria
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Products)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Descryption)
        </td>
        <td>
          @item.Price.ToString("c")
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
          <a asp-action="EditProduct" asp-route-xId="@item.ProductID">Edit</a> |
          @*<a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |*@
          <a asp-action="DeleteProduct" asp-route-xId="@item.ProductID">Delete</a>
        </td>
      </tr>

    }
  </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="ListProduct" page-classes-enabled="true"
       page-class="btn" page-class-normal="btn-secondary"
       page-class-selected="btn-primary" class="btn-group pull-right m-1">
  </div>