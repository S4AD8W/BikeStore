
@model BikeStore.ViewModels.Order.DetailOrderVM




<section class="checkout-step checkout-step-shipment">
  <hr class="line">
  <h2 class="">
    @Languages.GetText(TextEnum.EnterYourShippingData)
  </h2>

  <div class="content">

    <div class="row">
      <div class="col-md-8 col-md-offset-1">
        <div class="form-horizontal ">
          <div class="form-group row ">
            <label for="Name" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Name)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="Name" class="form-control" />
            </div>
          </div>
          <div class="form-group row ">
            <label for="SurName" class="col-sm-5 control-label">@Languages.GetText(TextEnum.SurName)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="SurName" class="form-control" />
            </div>
          </div>
          <div class="form-group row ">
            <label for="Email" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Email)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="Email" class="form-control" />
            </div>
          </div>
          <div class="form-group row ">
            <label for="" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Address)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="Address" class="form-control" />
            </div>
          </div>

          <div class="form-group row ">
            <div class="col-sx-offset-7 col-sm-5">
              <label for="customerPostcode" class="control-label zip-post-label text-right">
                @Languages.GetText(TextEnum.ZipCodeAndCity)
              </label>
            </div>
            <div class="col-xs-4 col-sm-3">
              <input type="text" class="form-control" id="PostCode" asp-for="PostCode" maxlength="6" value="" autocomplete="off" aria-required="true" aria-describedby="customerPostcode-error" aria-invalid="true">
            </div>
            <div class="col-xs-8 col-sm-4">
              <input type="text" class="form-control" id="City" asp-for="City" maxlength="30" value="">
            </div>
          </div>

          <div class="form-group row ">
            <label for="PhoneNumber" class="col-sm-5 control-label">@Languages.GetText(TextEnum.PhoneNumber)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="PhoneNumber" class="form-control" />
              <span class="help-block">Podaj numer telefonu, który ułatwi nam kontakt z Tobą w sprawie zamówienia.</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-1">
        <div class="checkbox">
          <input type="checkbox"  asp-for="DeleliveryAnotherAddress" value="true" data-bind="checked: switchers.otherShipmentAddress">
          <label s">@Languages.GetText(TextEnum.IWantToSendThisPackageToADifferentAddress)</label>
        </div>
        <div id="AnotherShippingAddressWrap" class="form-horizontal hidden">
          <div class="form-group row ">
            <label for="AnotherName" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Name)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="AnotherName" class="form-control" />
            </div>
          </div>
          <div class="form-group row ">
            <label for="AnotherSurName" class="col-sm-5 control-label">@Languages.GetText(TextEnum.SurName)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="AnotherSurName" class="form-control" />
            </div>
          </div>

          <div class="form-group row ">
            <label for="AnotherAddress" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Address)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="AnotherAddress" class="form-control" />
            </div>
          </div>

          <div class="form-group row ">
            <div class="col-sx-offset-7 col-sm-5">
              <label for="customerPostcode" class="control-label zip-post-label text-right">@Languages.GetText(TextEnum.ZipCodeAndCity)</label>
            </div>
            <div class="col-xs-4 col-sm-3">
              <input type="text" class="form-control" id="AnotherPostCode" asp-for="AnotherPostCode" maxlength="6" value="" autocomplete="off" aria-required="true" aria-describedby="customerPostcode-error" aria-invalid="true">
            </div>
            <div class="col-xs-8 col-sm-4">
              <input type="text" class="form-control" id="AnotherCity" asp-for="AnotherCity" maxlength="30" value="">
            </div>
          </div>

          <div class="form-group row ">
            <label for="AnotherPhoneNumber" class="col-sm-5 control-label">@Languages.GetText(TextEnum.PhoneNumber)</label>
            <div class="col-sm-7">
              <input type="tel" asp-for="AnotherPhoneNumber" class="form-control" />
            </div>
          </div>

          <div class="form-group row ">
            <label for="Email" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Email)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="AnotherEmail" class="form-control" />
            </div>
          </div>

        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-1">
        <div class="checkbox">
          <input type="checkbox" asp-for="AnotherDataInvoice" value="true" data-bind="checked: switchers.otherShipmentAddress" class="valid" aria-invalid="false">
          <label for="AnotherDataInvoice">@Languages.GetText(TextEnum.IWantToProvideOtherDetailsForTheInvoice)</label>
        </div>
        <div id="AnotherDataInvoiceWrap" class="form-horizontal hidden">
          <div class="form-group row ">
            <label for="Invoice_Name" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Name)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="Invoice_Name" class="form-control" />
            </div>
          </div>

          <div class="form-group row">
            <label for="Invoice_Address" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Address)</label>
            <div class="col-sm-7">
              <input type="text" asp-for="Invoice_Address" class="form-control" />
            </div>
          </div>

          <div class="form-group row ">
            <div class="col-sx-offset-7 col-sm-5">
              <label for="Invoice_PostCode" class="control-label zip-post-label text-right">@Languages.GetText(TextEnum.ZipCodeAndCity)</label>
            </div>
            <div class="col-xs-4 col-sm-3">
              <input type="text" class="form-control" id="Invoice_PostCode" asp-for="Invoice_PostCode" maxlength="6" value="" autocomplete="off" aria-required="true" aria-describedby="customerPostcode-error" aria-invalid="true">
            </div>
            <div class="col-xs-8 col-sm-4">
              <input type="text" class="form-control" id="Invoice_Citi" asp-for="Invoice_Citi" maxlength="30" value="">
            </div>
          </div>

          <div class="form-group row ">
            <label for="" class="col-sm-5 control-label">Nip</label>
            <div class="col-sm-7">
              <input type="text" class="form-control" />
            </div>
          </div>

        </div>

      </div>
    </div>

    <div class="row ">
      <div class="col-md-8 col-md-offset-3">

        <div class="checkbox">
          <input type="checkbox" asp-for="IsOrderAttention" value="true">
          <label for="IsOrderAttention">@Languages.GetText(TextEnum.IWantToAddNotesToTheOrder)</label>
        </div>

        <div class="form-group row hidden" id="IsOrderAttentionWrap">
          <div class="col-sm-7 offset-5">
            <textarea class="form-control" placeholder="Tutaj wpisz swoje uwagi do zamówienia" rows="6" asp-for="Attention" maxlength="2000"></textarea>
          </div>
        </div>

      </div>


    </div>
    <div class="row ">
      <div class="col-md-8 col-md-offset-3">
        <div class="checkbox">
          <input type="checkbox" id="IsAcceptStoreRules" asp-for="IsAcceptStoreRules" value="true">
          <label for="otherShipmentAddress">@Languages.GetText(TextEnum.IAcceptTheTermsAndConditionsOfTheShop)</label>
        </div>
        <div class="checkbox">
          <input type="checkbox" id="IsEloctronicInvoice" asp-for="IsEloctronicInvoice" value="true">
          <label for="IsEloctronicInvoice">@Languages.GetText(TextEnum.IAgreeToIssueAndSendAnInvoiceInElectronicForm)</label>
        </div>
      </div>
    </div>
  </div>
</section>





