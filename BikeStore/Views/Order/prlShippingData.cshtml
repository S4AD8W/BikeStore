<div class="row mb-3">
  <div class="col border-bottom textHeaderCard" style="border-bottom-color:#0fc547!important">
    @Languages.GetText(TextEnum.EnterYourShippingData)
  </div>
</div>
<div class="row ">
  <div class="col-md-8 col-md-offset-3">
    <div class="form-horizontal " style="border-bottom: 1px solid red;">

      <div class="form-group row offset-1">
        <label for="" class="col-sm-5 control-label">@Languages.GetText(TextEnum.Name)</label>
        <div class="col-sm-7">
          <input type="text" class="form-control" />
        </div>
      </div>
      <div class="form-group row offset-1">
        <label for="" class="col-sm-5 control-label">@Languages.GetText(TextEnum.SurName)</label>
