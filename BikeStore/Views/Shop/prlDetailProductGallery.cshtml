
@model IEnumerable<BikeStore.core.Domain.Product_NS.ProductImage>

<div class="row">
  @foreach (var pItem in Model) {
    string pImage = Convert.ToBase64String(pItem.Content);

    <div class="col-lg-4 col-md-12 mb-4">

      <!--Modal: Name-->
