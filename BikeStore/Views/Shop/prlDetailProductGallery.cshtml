                 asp-area="Admin" class="btn btn-outline-primary btn-rounded btn-md ml-4">@Languages.GetText(TextEnum.Delete)</a>*@

                <button type="button" class="btn btn-outline-primary btn-rounded btn-md ml-4" data-dismiss="modal">@Languages.GetText(TextEnum.Close)</button>

              </div>

            </div>
            <!--/.Content-->

          </div>
        </div>
        <!--Modal: Name-->

        <a>
          <img class="img-fluid z-depth-1" src="data:image/jpeg;base64,@(Convert.ToBase64String(pItem.Content))" alt="video"
               data-toggle="modal" data-target="#Modal@(pItem.IdxProduct)">
        </a>

      </div>
    }
