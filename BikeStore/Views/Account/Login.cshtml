@model BikeStore.Infrastructure.Commands.Users.LogIn

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Languages.GetText(TextEnum.LogIn)</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" id="LogInForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Languages.GetText(TextEnum.Email)</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Languages.GetText(TextEnum.Password)</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Languages.GetText(TextEnum.LogIn)" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>

    <div>
        <a asp-action="ResetPassword" asp-controller="Account"><p>@Languages.GetText(TextEnum.ForGotYourPassword)</p></a>
    </div>
</div>

