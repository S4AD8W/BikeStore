@using BikeStore.Inferastructure
@model BikeStore.core.Domain.Product_NS.Product

<div class="card card-outline-primary m-1 p-1">
  <div class="bg-faded p-1">
    <h4>
      @Model.Name
      <span class="badge badge-pill badge-primary" style="float:right">
        <small>@Model.Price.ToString("c")</small>
      </span>
    </h4>
    
      <a asp-action="EditProduct" asp-route-xId="@Model.IdxProduct">Edit</a> |
      @*<a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |*@
      <a asp-action="DeleteProduct" asp-route-xId="@Model.IdxProduct">Delete</a>
    
  </div>

  <form id="@Model.IdxProduct" asp-action="AddToCart"
        asp-controller="Cart" method="post">
    <input type="hidden" asp-for="IdxProduct" />
    <input type="hidden" name="returnUrl"
           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <span class="card-text p-1">
      @Model.Description
      <button type="submit"
              class="btn btn-success btn-sm pull-right" style="float:right">
        Dodaj do koszyka
      </button>
    </span>
  </form>
</div>