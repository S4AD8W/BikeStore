
@model BikeStore.Areas.Admin.ViewModel.Product.EditProductVM

<div class="row">
<div class="col-6">
  <form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdxProduct" />
    <input type="hidden" asp-for="CreateAt"/>
    <div class="form-group">
      <label for="Name" class="control-label">@Languages.GetText(TextEnum.Name_Product)</label>
      <input asp-for="Name" class="form-control" />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Description" class="control-label">@Languages.GetText(TextEnum.Description)</label>
      <textarea asp-for="Description" class="form-control"> </textarea>
      <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label for="Price" class="control-label">@Languages.GetText(TextEnum.Price)</label>
      <input asp-for="Price" class="form-control" />
      <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label for="IdxCategory" class="control-label">@Languages.GetText(TextEnum.Category)</label>
      <select asp-for="IdxCategory" asp-items="Model.ProductCategories_SLI" class="form-control"></select>
      <span asp-validation-for="IdxCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label for="Quantity" class="control-label">@Languages.GetText(TextEnum.Quantity)</label>
      <input type="number" asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
      <label for="File" class="control-label">@Languages.GetText(TextEnum.Images)</label>
      <input type="file" multiple name="xFiles" class="form-control" />
    </div>
    <div class="form-group">
      <input type="submit" value="@Languages.GetText(TextEnum.Confirm)" class="btn btn-secondary" />
    </div>
  </form>
</div>
<div class="col-6">
 
  @await Html.PartialAsync("ProductImageGallery",Model.ProductImages)
</div>


</div>


<div>
  <a asp-action="List" asp-controller="Product" asp-area="Admin">@Languages.GetText(TextEnum.BackToList)</a>
</div>