<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">@Languages.GetText(TextEnum.ProductsList)</h6>
  </div>
  <div class="card-body">
    <div class="row mb-4">
      <div class="col-sm-12 col-md-6">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @Languages.GetText(TextEnum.SelectCategory)
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @foreach (var pCategory in Model.ProductCategories) {
              <a class="dropdown-item" asp-action="List" asp-controller="Product" asp-area="Admin" asp-route-xIdxCategory="@pCategory.IdxProductCategory">@pCategory.Name</a>
            }
          </div>
        </div>

      </div>
      <div class="col-sm-12 col-md-6">
        <span>tEST</span>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>@Languages.GetText(TextEnum.Name)</th>
            <th>@Languages.GetText(TextEnum.Description)</th>
            <th>@Languages.GetText(TextEnum.Quantity)</th>
            <th>@Languages.GetText(TextEnum.CreationDate)</th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>@Languages.GetText(TextEnum.Name)</th>
            <th>@Languages.GetText(TextEnum.Description)</th>
            <th>@Languages.GetText(TextEnum.Quantity)</th>
            <th>@Languages.GetText(TextEnum.CreationDate)</th>
            <th></th>
          </tr>
        </tfoot>
        <tbody>
          @foreach (var pItem in Model.Products) {

            <tr role="row" class="odd">
              <td>@pItem.Name</td>
              <td>@pItem.Description</td>
              <td>@pItem.Quantity</td>
              <td>@pItem.CreateAt</td>
              <td>
                <a asp-action="Edit" asp-controller="Product" asp-area="Admin" asp-route-xIdxProduct="@pItem.IdxProduct">@Languages.GetText(TextEnum.Edit)</a>
                <a asp-action="Delete" asp-controller="Product" asp-area="Admin" asp-route-xIdxProduct="@pItem.IdxProduct">@Languages.GetText(TextEnum.Delete)</a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-6">
        <span> Show: @Model.PagingInfo.ItemsPerPage for @Model.PagingInfo.TotalItems</span>

      </div>
      <div class="col-sm-12 col-md-6 ">
        <div page-model="@Model.PagingInfo" page-action="Fork" page-classes-enabled="true"
             page-class="btn " page-class-normal="btn-secondary"
             page-class-selected="btn-primary" class="btn-group pull-right m-1 float-right  ">
        </div>
      </div>
    </div>

  </div>
</div>

